                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h3 class="title-group">Datos de Productos Compuesto  </h3>
                                </div>
                            </div>
                        </div>
                        <div class="container-group">
                            <div class="row">
                                <input type="hidden" value="@objSesionInfo.nIdEmpresa" id="_ProCompuesto_nIdEmpresa">

                                <div class="col-md-4" style="margin-top: -5px;">
                                    <label>Producto Compuesto <span style="color:red"> *</span></label>
                                 
                                    <div id="_ProCompuesto_divCboProCompuesto" style="margin-top: 5px;">
                                        <select id="_ProCompuesto_cboProCompuesto" class="js-example-basic-multiple js-states form-control"></select>
                                    </div>
                                    <input id="_ProCompuesto_txtProCompuesto" type="text" class="leftTrim mayusculas form-control">
                                </div>
                                <div class="col-md-1" id="_ProCompuesto_divProCompuestoParte">
                                    <label>N° Parte</label>
                                    <input id="_ProCompuesto_txtProCompuestoParte" type="text" class="leftTrim mayusculas form-control">
                                    <input id="_ProCompuesto_txtProTipoOperacion" type="hidden">
                                    <input id="_ProCompuesto_txtProCompuestoUnidadMedidaNombre" type="hidden">
                                    <input id="_ProCompuesto_txtProCompuestoCodigo" type="hidden">
                                    <input id="_ProCompuesto_txtProSeries" type="hidden">
                                </div>
                                <div class="col-md-2" id="_ProCompuesto_divProCompuestoUnidadMedida">
                                    <label>U. Medida <span style="color:red"> *</span></label>
                                    <select id="_ProCompuesto_cboProCompuestoUnidadMedida" class="form-control">
                                        <option value="-1">- SELECCIONE -</option>
                                        @foreach (MUnidadMedida voUnidadMedida in vlstUnidadesMedida)
                                        {
                                            <option value="@voUnidadMedida.nIdUnidadMedida">@voUnidadMedida.sUMeNombre</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-1">
                                    <label>Cantidad <span style="color:red"> *</span></label>
                                    <input id="_ProCompuesto_txtProCompuestoCantidad" type="text" class="leftTrim soloDecimal form-control input-sm" maxlength="100" disabled>
                                </div>
                                <div class="col-md-1" id="_ProCompuesto_divMoneda" hidden>
                                    <label>Moneda</label>
                                    <input id="_ProCompuesto_txtProCompuestoMoneda" type="text" class="form-control input-sm leftTrim" maxlength="100" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Detalle</label>
                                        
