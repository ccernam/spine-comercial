<div class="wrapper wrapper-content" id="_ProCompuesto_manProducto">
    <div id="mostrarproducto" class="">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ibox-with-footer">
                    <div class="ibox-title title-header">
