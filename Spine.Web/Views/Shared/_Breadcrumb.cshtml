@using Spine.Web.Clases

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    @foreach (var vobjBreadcrumb in Model as List<Breadcrumb>)
                    {
                        if (!string.IsNullOrEmpty(vobjBreadcrumb.Path)) { 
                            <li class="breadcrumb-item"><a href="@vobjBreadcrumb.Path">@vobjBreadcrumb.Name</a></li>
                        } else { <li class="breadcrumb-item active">@vobjBreadcrumb.Name</li> }
                    }
                </ol>
            </div>
        </div>
    </div>
</section>
